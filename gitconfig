[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	la = "!git config -l | grep alias | cut -c 7-"
	last = log -1 HEAD
[core]
	editor = subl -w
	excludesfile = ~/.gitignore_global
[push]
	default = simple

[merge "ours"]
	name = "Keep ours merge"
	driver = true

[include]
	# For username / creds / etc
	path = gitconfig.local